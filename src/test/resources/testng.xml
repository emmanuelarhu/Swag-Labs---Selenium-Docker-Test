<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SauceDemo Test Suite" verbose="1">
    <parameter name="browser" value="chrome"/>

    <listeners>
        <listener class-name="com.saucedemo.listeners.TestListener"/>
    </listeners>

    <test name="SauceDemo E2E Tests" preserve-order="true">
        <classes>
            <class name="com.saucedemo.tests.SauceDemoTest">
                <methods>
                    <include name="testLoginPageElements"/>
                    <include name="testInventoryPageAfterLogin"/>
                    <include name="testCompleteShoppingFlow"/>
                    <include name="testCompleteShoppingFlowWithNumericPostalCode"/>
                </methods>
            </class>

        </classes>
    </test>

    <!-- Checkout Validation Tests -->
    <test name="Checkout Validation Tests" preserve-order="true">
        <classes>
            <class name="com.saucedemo.tests.CheckoutValidationTest">
                <methods>
                    <include name="testCheckoutEmptyFirstNameValidation"/>
                    <include name="testCheckoutEmptyLastNameValidation"/>
                    <include name="testCheckoutEmptyPostalCodeValidation"/>
                    <include name="testCheckoutValidPostalCodeMixed"/>
                    <include name="testCheckoutWithEmptyCart"/>
                    <include name="testCheckoutAllEmptyFieldsValidation"/>
                    <include name="testSuccessfulCheckoutWithValidData"/>
                    <include name="testCheckoutCancelButton"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>